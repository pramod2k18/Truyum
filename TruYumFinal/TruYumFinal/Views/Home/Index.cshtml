@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<head>
    <title>TruYum Restaurant</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!--<link rel="stylesheet" href="style/style.css">-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>

    body {
        font-family: "Nunito", sans-serif;
        overflow-x: hidden;
    }

    .blurb h1 {
        color: #e85d04;
        font-weight: 800;
        letter-spacing: 10px;
        font-size: 3rem;
        margin-bottom: 20px;
        height: 20px;
    }

    .blurb h2 {
        color: #e85d04;
        font-weight: 200;
        font-size: 2.5rem;
    }


    .blurb p {
        color: #495057;
        font-weight: 100;
        font-size: 1.5rem;
        line-height: 2;
    }

    .content {
        margin-top: 20px;
        margin-bottom: 100px;
    }

    .name-left {
        margin-left: 15px;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
    }

    .footer-dark {
        padding: 50px 0;
        color: #f0f9ff;
        background-color: #282d32;
    }

        .footer-dark h3 {
            margin-top: 0;
            margin-bottom: 12px;
            font-weight: bold;
            font-size: 16px;
        }

        .footer-dark ul {
            padding: 0;
            list-style: none;
            line-height: 1.6;
            font-size: 14px;
            margin-bottom: 0;
        }

            .footer-dark ul a {
                color: inherit;
                text-decoration: none;
                opacity: 0.6;
            }

                .footer-dark ul a:hover {
                    opacity: 0.8;
                }

    @@media (max-width:767px) {
        .footer-dark .item:not(.social) {
            text-align: center;
            padding-bottom: 20px;
        }
    }

    .footer-dark .item.text {
        margin-bottom: 36px;
    }

    @@media (max-width:767px) {
        .footer-dark .item.text {
            margin-bottom: 0;
        }
    }

    .footer-dark .item.text p {
        opacity: 0.6;
        font-size: 12px;
        margin-bottom: 0;
    }

    .footer-dark .item.social {
        text-align: center;
    }

    @@media (max-width:991px) {
        .footer-dark .item.social {
            text-align: center;
            margin-top: 20px;
        }
    }

    .footer-dark .item.social > a {
        font-size: 20px;
        width: 36px;
        height: 36px;
        line-height: 36px;
        display: inline-block;
        text-align: center;
        border-radius: 50%;
        box-shadow: 0 0 0 1px rgba(255,255,255,0.4);
        margin: 0 8px;
        color: #fff;
        opacity: 0.75;
    }

        .footer-dark .item.social > a:hover {
            opacity: 0.9;
        }

    .footer-dark .copyright {
        text-align: center;
        padding-top: 24px;
        opacity: 0.3;
        font-size: 13px;
        margin-bottom: 0;
    }
</style>

<body>

    <div class="navbar navbar-inverse sticky-top">
        <div style="margin-left: 10px" class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse">
                <h2 class="name-left">@Html.ActionLink("TruYum", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</h2>

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Menu Item - Admin", "MenuItem", "MenuItems")</li>
                    <li>@Html.ActionLink("Menu Item", "Index", "MenuItems")</li>
                    <li>@Html.ActionLink("Cart", "Index", "Carts")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <section class="container-fluid px-0">
        <div class="row align-items-center content">
            <div class="col-md-6 order-2 order-md-1">
                <img src="@Url.Content("~/images/newImg.jpg")" alt="" class="img-fluid">
            </div>
            <div class="col-md-6 text-center order-1 order-md-2">
                <div class="row justify-content-center">
                    <div class="col-10 col-lg-8 blurb mb-5 mb-md-0">
                        <h1>~TruYum~</h1>
                        <img src="imgs/lolli_icon.png" alt="" class="d-none d-lg-inline">
                        <h2>Meet, Eat & Enjoy!</h2>

                        <p class="lead">
                            Let us serve you better!<br />
                            TruYum has brought the most sterling ingredients from all over the world along with providing a pleasant time with family and friends.
                            Boldly go where your taste buds haven't gone before with recipes from countries far and near.
                            Our kitchen is the flight deck. Also, TruYum brings delicious food at your door step without extensive wait.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="footer-dark">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Services</h3>
                        <ul>
                            <li><a href="#">Buffet</a></li>
                            <li><a href="#">Conveyer Belt</a></li>
                            <li><a href="#">Take Away</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Location</h3>
                        <ul>
                            <li><a href="#">Pune</a></li>
                            <li><a href="#">Bengaluru</a></li>
                            <li><a href="#">Kolkata</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>TruYum</h3>
                        <p>
                            Making a reservation at TruYum restaurant is easy and takes just a
                            couple of minutes.
                        </p>
                    </div>
                    <div class="col item social"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-instagram"></i></a></div>
                </div>
                <p class="copyright">TruYum © 2021</p>
            </div>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
